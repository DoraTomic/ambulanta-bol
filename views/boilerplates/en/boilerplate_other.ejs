            <!-- Navbar when scrolling down dissapears but when scrolling up it appeares again -->
            <script>
                let lastScrollTop = 0;
                const navbar = this.document.getElementById('mainNavbar');

                window.addEventListener('scroll', function () {
                    let scrollTop = window.pageYOffset || this.document.documentElement.scrollTop;

                    if (scrollTop > lastScrollTop) {
                        // Scrolling down
                        navbar.classList.add('navbar-hidden');
                    } else {
                        // Scrolling up
                        navbar.classList.remove('navbar-hidden');
                    }

                    lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
                });
            </script>
